<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logoBandeira"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:paddingTop="30dp"
            android:scaleType="fitXY"
            android:src="@drawable/br_logo" />

        <TextView
            android:id="@+id/nomePostoLabel"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="Nome Posto" />

        <TextView
            android:id="@+id/enderecoPostoLabel"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="30dp"
            android:textSize="20dp"
            android:text="EndereÃ§o Rua Tal, num 23 - Bairro" />

        <ListView
            android:id="@+id/tabelaPrecos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dp"/>

        <Button
            android:id="@+id/btn-nevegacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_iniciarNav"
            android:onClick="navegacao"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:width="150dp"
            android:layout_gravity="center"/>

    </LinearLayout>
</ScrollView>

